<div class="space-4"></div>
<div class="space-2 post-index">
	<h1 id="page_title">Stuff I've Written</h1>
	<% @posts.each do |post| %>
		<div class="post">
			<p class="date"><%= post.created_at.strftime('%A, %B %d') %></p>
			<h2><a href="#"><%= link_to post.title, post %></a></h2>
		</div>
	<% end %>
	<%= will_paginate @posts %>
</div>
<div class="space-4"></div>
